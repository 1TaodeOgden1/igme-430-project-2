<body>
    <nav class="navbar has-background-black">
        <div class="container ">
            <div id="navMenu" class="navbar-menu">
                <div class="navbar-start ">
                    <a class='navbar-item' href='/main-menu'>
                        <img src="/assets/img/cah_icon.png" height="28">
                    </a>
                    <a class="navbar-item has-text-light" href='/main-menu' id="playButton">
                        Play
                    </a>
                    <a class="navbar-item has-text-light" href="/account" id="viewAccountButton">
                        Account Settings
                    </a>

                </div>

                <div class="navbar-end has-background-black">
                    <div class="navbar-item">
                        <div class="buttons">
                            <a class="navbar-item has-text-light" href='/logout'>
                                Log out
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <section class="hero is-link is-fullheight-with-navbar has-background-black">
        <h1 class=" block title has-text-centered">Welcome, {{username}}</h1>
        <div class="hero-body is-flex is-justify-content-center is-flex-direction-column">
            <div class="block" id="content">
                <!--React components render here-->
            </div>
        </div>
    </section>
